<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springcloud.customer.dao.UserDao">


        <select id="selectAllUser" resultType="map">
            select *
            from user
        </select>

        <select id="selectPriceInnerJoinPriceOrder" parameterType="map" resultType="map">
            select *
            from price p1
            inner join price_order p2
            on p1.p_id = p2.p_id
            where p2.open_id = #{open_id}
            and p1.p_condition=#{num}
        </select>

        <insert id="insertUsers" parameterType="java.util.List" >
            insert into user ( id, name ) values
            <foreach collection="user" item="item" index="index" separator=",">
                (
                #{item.id,jdbcType=VARCHAR},
                #{item.name,jdbcType=VARCHAR}
                )
            </foreach>

        </insert>

        <select id="findUserByAccountAndPassword" parameterType="string" resultType="com.springcloud.customer.entity.User">
            select * from user u
            where u.username = #{username}
            and u.password = #{password}
        </select>

        <select id="findUserByUserId" parameterType="string" resultType="com.springcloud.customer.entity.User">
            select * from user
            where user.id = #{id}
        </select>

</mapper>